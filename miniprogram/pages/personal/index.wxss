page {
  background-color: #f6f6f6;
  height: 100vh;
}

.head {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: #f40000;
  text-align: center;
  opacity: 0;
  transition: opacity 0.8s ease-in-out 0.3s;
}

.head.show {
  opacity: 1;
}

.head.hidden {
  opacity: 0;
}

.head .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.bottom-tab {
  height: 60px;
}

.user-panel {
  text-align: center;
}

.content {
  margin: 0;
  height: 100vh;
  position: relative;
}

.user-mask {
  width: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  transform: scale(1);
}

.user-mask.absolute {
  position: absolute;
}

.user-mask.fixed {
  position: fixed;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: 200rpx;
  box-sizing: border-box;
  border: 4rpx solid #fff;
  background-color: #f6f6f6;
}

.user-name {
  margin-top: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.user-tab {
  background-color: #fff;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
  border-radius: 10rpx;
  margin: 50rpx 30rpx 0;
}

.user-tab-item {
  flex-grow: 1;
}

.user-tab-title {
  font-size: 32rpx;
  font-weight: bold;
}

.color-t {
  color: #f40000;
}

.user-tab-text {
  font-size: 20rpx;
  color: #999;
  margin-top: 20rpx;
}

.release {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.release-item {
  flex-grow: 1;
}

.release-icon {
  width: 48rpx;
  height: 48rpx;
}

.release-text {
  font-size: 20rpx;
  display: block;
  margin-top: 10rpx;
}

.love-car {
  margin: 10rpx 30rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.car-info {
  display: flex;
  align-items: center;
  padding: 40rpx;
}

.car-name {
  margin-left: 30rpx;
}

.car-code {
  text-align: left;
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
}

.code {
  text-align: left;
  font-size: 26rpx;
  color: #f40000;
  font-weight: bold;
  margin-top: 20rpx;
}

.pla-code {
  color: #f40000;
}

.car-logo {
  width: 120rpx;
  height: 120rpx;
  background-color: #f7f7f7;
  border-radius: 60rpx;
  overflow: hidden;
  text-align: center;
  margin-top: 10rpx;
}

.M3A {
  width: 100rpx;
  height: 100rpx;
}

.add-car {
  padding: 30rpx;
  font-size: 36rpx;
  color: #000;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tianjia {
  font-size: 36rpx;
  color: #f40000;
  margin-right: 20rpx;
}

.car-setting {
  display: flex;
  padding: 40rpx 0;
  border-top: 2rpx solid #f6f6f6;
}

.set-item {
  flex-grow: 1;
}

.car_sty {
  color: #f40000;
  font-size: 48rpx;
  font-weight: bold;
}

.set-text {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-top: 20rpx;
}

.car-border {
  border-left: 2rpx solid #f6f6f6;
  border-right: 2rpx solid #f6f6f6;
}

.consume {
  height: 500rpx;
  margin: 20rpx 30rpx 20px;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 30rpx 0;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.consume-title {
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.record {
  font-size: 32rpx;
  font-weight: bold;
  color: #f40000;
  padding: 0 20rpx;
  vertical-align: middle;
}
