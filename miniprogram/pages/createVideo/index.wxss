page {
  height: 100vh;
}

.container {
  height: 100%;
}

.textarea {
  width: 100%;
  height: 80px;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.video-box {
  text-align: center;
  overflow: hidden;
  background-color: #000;
  margin: 0 15px;
  font-size: 0;
  margin-top: 30rpx;
}

.upload-btn {
  width: 300rpx;
  border: 5rpx dashed #f40000;
  padding: 20rpx;
  margin: auto;
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #f40000;
  text-align: center;
}

.shangchuang {
  font-size: 72rpx;
  color: #f40000;
}

.bottom {
  height: 200px;
  padding: 0 30rpx;
}

.release-btn {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  margin: auto;
  border-radius: 10rpx;
  margin-top: 100rpx;
  background-color: #f40000;
  color: #fff;
  font-weight: bold;
  text-align: center;
}
