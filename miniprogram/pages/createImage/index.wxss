page {
  height: 100vh;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.textarea {
  width: 100%;
  height: 80px;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  font-weight: bold;
  box-sizing: border-box;
}

.img-input {
  margin: 10rpx 0 30rpx 0;
}

.img-box {
  flex-grow: 1;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: center;
  overflow: hidden;
}

.bottom {
  height: 200px;
  padding: 0 30rpx;
  flex-shrink: 0;
}

.bottom-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.leixing, .dingwei {
  font-size: 24rpx;
  color: #000;
  font-weight: bold;
}

.label {
  font-size: 24rpx;
  font-weight: bold;
  margin-left: 30rpx;
  flex-grow: 1;
}

.lx-text {
  font-size: 20rpx;
  color: #999;
}

.gengduo {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

.release-btn {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  margin: auto;
  border-radius: 10rpx;
  margin-top: 100rpx;
  background-color: #f40000;
  color: #fff;
  font-weight: bold;
  text-align: center;
}

.upload-btn {
  width: 300rpx;
  border: 5rpx dashed #f40000;
  padding: 20rpx;
  margin: auto;
  margin-top: 30rpx;
}

.shangchuang {
  font-size: 72rpx;
  color: #f40000;
}

.item-img {
  width: 100%;
}
