@import "../../utils/loading.wxss";

.top {
  width: 100%;
  height: 300px;
  overflow: hidden;
  position: relative;
}

.top-cover {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.user-box {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.user-head {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #fff;
  box-sizing: border-box;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-left: 20rpx;
}

.tab {
  padding: 30rpx;
  color: #c5cad4;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.tab text {
  transition: all 0.3s;
}

.em {
  display: block;
  width: 2rpx;
  height: 24rpx;
  background-color: #c5cad4;
  margin: 0 20rpx;
}

.activate {
  color: #333;
}

.list {
  padding: 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  overflow: hidden;
  border-radius: 10rpx;
  margin-top: 10rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.05);
}

.item-cover {
  width: 340rpx;
  height: 340rpx;
  background-color: #eee;
}

.item-title {
  width: 340rpx;
  font-size: 32rpx;
  padding: 10rpx;
  color: #000;
  box-sizing: border-box;
}

.item-user-box {
  padding: 10rpx;
  display: flex;
  align-items: center;
}

.item-user-head {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.item-user-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #6a7082;
  margin-left: 20rpx;
}

.none-data {
  text-align: center;
  margin-top: 200rpx;
}

.none-text {
  font-size: 24rpx;
  color: #f40000;
}

.none {
  font-size: 128rpx;
  color: #f40000;
}
